//PNR.PHP

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>PNR Status</title>
	<link rel="stylesheet" href="styles.css">
</head>
<body>
	<nav>
		<ul>
			<li><a href="index.html">Home</a></li>
			<li><a href="login.html">Login</a></li>
			<li><a href="about.html">About Us</a></li>
			<li><a href="contact.html">Contact Us</a></li>
		</ul>
	</nav>
	<div class="container">
		<h1>PNR Status</h1>
		<form action="pnr.php" method="get">
			<label for="pnr">PNR No.:</label>
			<input type="text" name="pnr" id="pnr" required>
			<br>
			<button type="submit">Check PNR Status</button>
		</form>
		<?php
		// Define the PNR number
		$pnr_number = $_GET['pnr'];

		// Define the URL for the Indian Railways PNR enquiry API
		$url = "https://api.railwayapi.com/v2/pnr-status/pnr/$pnr_number/apikey/your_api_key/";

		// Initialize cURL
		$ch = curl_init();

		// Set the cURL options
		curl_setopt($ch, CURLOPT_URL, $url);
		curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);

		// Execute the cURL request
		$response = curl_exec($ch);

		// Close the cURL session
		curl_close($ch);

		// Decode the JSON response
		$data = json_decode($response, true);

		// Check if the PNR number is valid
		if ($data['response_code'] == 200) {
			// Display the PNR status and other details
			echo "<p>PNR Number: $pnr_number</p>";
			echo "<p>Train Name: " . $data['train']['name'] . "</p>";
			echo "<p>Train Number: " . $data['train']['number'] . "</p>";
			echo "<p>From: " . $data['from_station']['name'] . "</p>";
			echo "<p>To: " . $data['to_station']['name'] . "</p>";
			echo "<p>Date: " . $data['chart_prepared'] . "</p>";
			echo "<p>Class: " . $data['current_booking']['class'] . "</p>";
			echo "<p>Seat Number: " . $data['current_booking']['booked_seats'] . "</p>";
			echo "<p>Passenger Name: " . $data['passengers'][0]['name'] . "</p>";
			echo "<p>Passenger Age: " . $data['passengers'][0]['age'] . "</p>";
			echo "<p>Passenger Gender: " . $data['passengers'][0]['gender'] . "</p>";
			echo "<p>Passenger Status: " . $data['passengers'][0]['current_status'] . "</p>";
		} else {
			// Display an error message if the PNR number is invalid
			echo "<p>The PNR number $pnr_number is invalid.</p>";
		}
		?>
	</div>
</body>
</html>

      //LOGIN.PHP

      <?php
error_reporting(E_ALL);
if(!defined('DB_SERVER')){
    require_once("C:\xampp\htdocs\newfolder\book.php");
}
class DBConnection{

    private $host = DB_SERVER;
    private $username = DB_USERNAME;
    private $password = DB_PASSWORD;
    private $database = DB_NAME;
    
    public $conn;
    
    public function __construct(){

        if (!isset($this->conn)) {
            
            $this->conn = new mysqli($this->host, $this->username, $this->password, $this->database);
            
            if (!$this->conn) {
                echo 'Cannot connect to database server';
                exit;
            }            
        }    
        
    }
    public function __destruct(){
        $this->conn->close();
    }
}
?>





     

     
